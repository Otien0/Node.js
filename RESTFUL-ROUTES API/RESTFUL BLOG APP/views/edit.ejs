<%- include('partials/header') -%>

<div class="ui main text container segment">
    <div class="ui huge header"> Edit Blog</div>

    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label for="Ttile"></label>
            <input type="text" name="blog[title]" placeholder="title">
        </div>
        
        <div class="field">
            <label for="Image"></label>
            <input type="text" name="blog[image]" placeholder="image">
        </div>

        <div class="field">
            <label> Blog Content </label>
            <textarea name="blog[body]" id="" cols="30" rows="10"></textarea>
        </div>
        
        <!-- <input type="submit"> -->
        <button class="ui violet big basic button"> Submit</button>

    </form>
</div>

